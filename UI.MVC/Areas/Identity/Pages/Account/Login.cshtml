@page
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Environment
@model LoginModel

@{
    ViewData["Title"] = "Meld aan";
    Layout = "_LayoutAdmin";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>
<div class="container login-container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-body">
                    <form id="account" method="post">
                        <h2 class="card-title">Meld aan met een geldig account.</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
             <div class="form-floating mb-3">
             
                 <div class="input-group"> 
                     <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                  
                     <span asp-validation-for="Input.Password" class="text-danger"></span>
                     <div class="input-group-append">
                         <button id="togglePassword1" class="btn btn-outline-secondary" type="button"><i class="fas fa-eye"></i></button>
                     </div>
                 </div>
             </div>


                       
                        <button id="login-submit" type="submit" class="btn btn-lg btn-primary w-100">Meld aan</button>
                    </form>
                </div>
                <div class="card-footer">
                    <p><a id="forgot-password" asp-page="./ForgotPassword">Wachtwoord vergeten?</a></p>
                </div>
            </div>
        </div>
        <!-- Toggle Button -->
        @if (Environment.IsDevelopment())
        {
            <button id="toggle-login-details" class="btn btn-info my-3">Show Login Details</button>
            <div id="login-details" class="card d-none">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Gebruiker: admin@kdg.be | Wachtwoord: @Model.AdminPassword | Rol: Admin</li>
                    <li class="list-group-item">Gebruiker: Sadmin@kdg.be | Wachtwoord: @Model.SubplatformAdminPassword | Rol: Subplatformadmin</li>
                    <li class="list-group-item">Gebruiker: companion@kdg.be | Wachtwoord: @Model.CompanionPassword | Rol: Companion</li>
                </ul>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script defer src="/dist/hideLogin.entry.js"></script>
}