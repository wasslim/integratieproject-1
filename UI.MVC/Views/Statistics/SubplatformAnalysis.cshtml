@model UI.MVC.Models.Dto.SubplatformDto

@{
    ViewBag.Title = "Subplatform Analysis";
    Layout = "_LayoutAdmin";
}
<div class="container mt-5">
    <div class="bg-light p-5 rounded shadow-sm">
<h2>Analyse voor @Model.CustomerName</h2>
<span id="subplatformIdSpan" data-subplatform-id="@Model.Id"></span>
        <div class="mb-5 text-center">
            <h5 class="mb-3">Aantal keren dat flows van dit subplatform doorlopen zijn:</h5>
            <p id="flowSessionCountTextSubplatform" class="display-4 fw-bold text-primary"></p>
        </div>

        <div class="mb-5 text-center">
            <h5 class="mb-3">Gemiddelde tijd gespendeerd aan de flows van dit subplatform:</h5>
            <p id="averageTimeSpentTextSubplatform" class="display-4 fw-bold text-success d-inline-block"></p>
                                    <span class="align-middle"> seconden</span>

        </div>

        <div class="text-center mt-4">
            <h5>Om een csv bestand te downloaden van de data van de flows van dit subplatform:</h5>
            <a class="btn btn-warning btn-lg text-white fw-bold mt-3" href="@Url.Action("ExportSubplatformDataToCsv", "Statistics", new { subplatformId = Model.Id })">Download CSV</a>
        </div>
    </div>
</div>


@section Scripts
{
    <script defer src="/dist/subplatformanalysis.entry.js"></script>
}
