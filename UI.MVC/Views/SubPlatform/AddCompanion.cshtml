@model UI.MVC.Models.Dto.CompanionDto

@{
    ViewBag.Title = "Begeleider maken";
    Layout = "_LayoutAdmin";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <h2 class="mb-4 text-center">Begeleider maken</h2>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <h4>Fouten:</h4>
                    <div asp-validation-summary="All"></div>
                </div>
            }
            <div class="card">
                <div class="card-body">
                    <form asp-controller="SubPlatform" asp-action="AddCompanion" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Email:</label>
                            <input id="name" asp-for="Name" maxlength="50" class="form-control" placeholder="Voer email in" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <small id="nameCount" class="form-text text-muted">0/50</small>
                        </div>
                      <div class="form-group">
                          <label asp-for="Password">Wachtwoord:</label>
                          <div class="input-group">
                              <input type="password" asp-for="Password" id="Password" maxlength="30" class="form-control"/>
                              <div class="input-group-append">
                                  <button id="togglePassword" class="btn btn-outline-secondary" type="button"><i class="fas fa-eye"></i></button>
                              </div>
                              <span asp-validation-for="Password" class="text-danger"></span>
                          </div>
                          <small id="PasswordCount" class="form-text text-muted">0/30</small>
                      </div>

                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Wachtwoordcriteria</h5>
                                <p class="card-text">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">Minimaal 8 tekens lang</li>
                                        <li class="list-group-item">Bevat ten minste één hoofdletter</li>
                                        <li class="list-group-item">Bevat ten minste één kleine letter</li>
                                        <li class="list-group-item">Bevat ten minste één cijfer</li>
                                    </ul>
                                </p>
                            </div>
                        </div>
               
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Begeleider toevoegen</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/dist/userexperience.entry.js"></script>
}
