@model UI.MVC.Models.Dto.CreateSubPlatformAdminViewModel

@{
    ViewBag.Title = "title";
    Layout = "_LayoutAdmin";
}

<h2>Deelplatform beheerder maken</h2>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <h4>Fouten:</h4>
        <div asp-validation-summary="All"></div>
    </div>
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }


            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Wachtwoordcriteria</h5>
                    <p class="card-text">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Minimaal 8 tekens lang</li>
                            <li class="list-group-item">Bevat ten minste één hoofdletter</li>
                            <li class="list-group-item">Bevat ten minste één kleine letter</li>
                            <li class="list-group-item">Bevat ten minste één cijfer</li>
                            <li class="list-group-item">Bevat ten minste één speciaal teken</li>
                        </ul>
                    </p>
                </div>
            </div>

            <form asp-controller="Administrator" asp-action="CreateSubPlatformAdmin" method="post">
                <div class="form-group">
                    <label asp-for="Name">Naam organisatie:</label>
                    <input asp-for="Name" id="Name" maxlength="25" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <small id="NameCount" class="form-text text-muted">0/25</small>
                </div>
                <div class="form-group">
                    <label asp-for="Email">E-mailadres:</label>
                    <input asp-for="Email" id="Email" maxlength="50" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <small id="EmailCount" class="form-text text-muted">0/50</small>
                </div>
              <div class="form-group">
                  <label asp-for="Password">Wachtwoord:</label>
                  <div class="input-group">
                      <input type="password" asp-for="Password" id="Password" maxlength="30" class="form-control"/>
                      <div class="input-group-append">
                          <button id="togglePassword" class="btn btn-outline-secondary" type="button"><i class="fas fa-eye"></i></button>
                      </div>
                      <span asp-validation-for="Password" class="text-danger"></span>
                  </div>
                  <small id="PasswordCount" class="form-text text-muted">0/30</small>
              </div>

                <div class="form-group">
                    <label asp-for="MainText">Introductie tekst:</label>
                    <input asp-for="MainText" id="MainText" maxlength="100" class="form-control"/>
                    <span asp-validation-for="MainText" class="text-danger"></span>
                    <small id="MainTextCount" class="form-text text-muted">0/100</small>
                </div>
                <div class="form-group">
                    <label asp-for="Link">Link van de organisatie:</label>
                    <input asp-for="Link" id="Link" maxlength="50" class="form-control"/>
                    <span asp-validation-for="Link" class="text-danger"></span>
                    <small id="LinkCount" class="form-text text-muted">0/50</small>
                </div>
                <button type="submit" class="btn btn-primary">Email verzenden met inloggegevens</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/dist/userexperience.entry.js"></script>

}
