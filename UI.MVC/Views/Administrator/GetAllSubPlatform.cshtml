@model IEnumerable<PIP.Domain.User.SubPlatformAdministrator>

@{
    ViewBag.Title = "Deelplatform beheerders";
    Layout = "_LayoutAdmin";
}

<h2>@ViewBag.Title</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="list-group">
                @foreach (var user in Model)
                {
                    <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">Naam organisatie: @user.OrganizationName</h5>
                            <p class="mb-1">Email: @user.Email</p>
                        </div>
                        <div>
                   
                            <form method="get" asp-controller="Statistics" asp-action="SubplatformAnalysis" asp-route-id="@user.Subplatform.SubplatformId">
                                <button type="submit" class="btn btn-danger btn-sm">Analyse</button>
                            </form>
                            <form method="get" asp-action="EditSubPlatform" asp-route-id="@user.Id">
                                <button type="submit" class="btn btn-primary btn-sm">Bewerk</button>
                            </form>
                            <a class="btn btn-link" asp-area="Identity" asp-page="/Account/ForgotPassword">Stuur mail om zijn wachtwoord te veranderen</a>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

