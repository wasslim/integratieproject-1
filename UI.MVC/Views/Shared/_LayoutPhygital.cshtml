@using PIP.Domain.Deelplatform
@{
    var project = ViewData["Project"] as Project;
    var currentAction = ViewContext.RouteData.Values["action"].ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewBag.Title - Programmers in Paris</title>
    @await RenderSectionAsync("Scripts", required: false)

    <link rel="stylesheet" href="~/dist/site.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5/dist/sketchy/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&family=Open+Sans:wght@400;600;700&family=Lobster&family=Montserrat:wght@400;500;700&family=Oswald:wght@400;500;700&family=Poppins:wght@400;500;700&family=Lato:wght@400;700&family=Raleway:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <style>
        .custom-container {
            max-width: 100%; /* Adjust this value as needed */
        }
    </style>
    @if (project != null && project.Font != null && project.BackgroundColor != null)
    {
        <style>
            body {
                font-family: '@project.Font', sans-serif;
                background-color: @project.BackgroundColor;
                background-image: none;
            }
        </style>
    }
</head>
<body>
<header>
   <nav class="navbar navbar-expand-lg bg-primary">
       <div class="container-fluid d-flex justify-content-between align-items-center p-0">
           
           <!-- Empty space to push title to center -->
           <div class="navbar-nav"></div>
   
           <!-- Centered Title -->
           <div class="navbar-nav mx-auto">
               <li class="nav-item">
                   <h1 class="text-info ms-lg-5">@ViewBag.Title</h1>
               </li>
           </div>
           @if(project !=null)
           {
           <!-- Right-aligned Icon -->
           <div class="navbar-nav">
               <li class="nav-item">
                   <a href="@project.Subplatform.Link">
                       <i class="bi bi-info-circle text-white" style="font-size: 3rem;"></i>
                   </a>
               </li>
           </div>}
       </div>
   </nav>



</header>

<div class="container justify-content-center">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
@if (currentAction != "Privacy")
{
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <a href="@Url.Action("Privacy", "Home")">Privacy Policy</a>
        </div>
    </footer>
}
</body>
</html>